<?xml version="1.0" encoding="utf-8"?>
<Component
    xmlns="http://www.red5studios.com/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.red5studios.com/ ../../../../schemas/component.xsd"
>

    <Info
        title="Ability Duration Timer"
        author="Rumpel, Vollmond"
        description="Shows duration timer for abilities."
        url="http://forums.firefall.com/community/threads/8254722/"
        uiVersion="1000"
    />

    <Textures>
        <Texture name="icon_bg" src=".\res\background.png" premultiplied="false" />
    </Textures>
    
    <Events>    
        <Event name="ON_COMPONENT_LOAD"   bind="OnComponentLoad"   />
        <Event name="ON_COMPONENT_UNLOAD" bind="OnComponentUnload" />
        <Event name="ON_PLAYER_READY"     bind="OnPlayerReady"     />
        <Event name="ON_ABILITY_STATE"    bind="OnAbilityState"    />
        <Event name="ON_ABILITY_USED"     bind="OnAbilityUsed"     />

        <Event name="MY_HUD_SHOW"         bind="OnShow"            />
    </Events>
    
    <BluePrints>
        <BluePrint name="BP_IconTimer" instantiable="true">
            <Group name="timer_grp" dimensions="left:0; top:0; height:64; width:64;" style="clip:false;">
                <StillArt name="circle" dimensions="height:64; width:64;" style="texture:icon_bg; alpha:1;" />
                <!-- <Icon name="icon_bg" dimensions="width:64; height:64;" /> -->
                <Icon name="icon" dimensions="width:64; height:64;" />
                <TextTimer name="text_timer_outline_1" dimensions="center-x:50%+1; center-y:50%+1; width:64; height:64;" style="font:Demi_18; valign:middle; halign:center; clip:false; wrap:false; padding:0; visible:true; text-color:#000000; format:%.1s" />
                <TextTimer name="text_timer_outline_2" dimensions="center-x:50%+1; center-y:50%-1; width:64; height:64;" style="font:Demi_18; valign:middle; halign:center; clip:false; wrap:false; padding:0; visible:true; text-color:#000000; format:%.1s" />
                <TextTimer name="text_timer_outline_3" dimensions="center-x:50%-1; center-y:50%-1; width:64; height:64;" style="font:Demi_18; valign:middle; halign:center; clip:false; wrap:false; padding:0; visible:true; text-color:#000000; format:%.1s" />
                <TextTimer name="text_timer_outline_4" dimensions="center-x:50%-1; center-y:50%+1; width:64; height:64;" style="font:Demi_18; valign:middle; halign:center; clip:false; wrap:false; padding:0; visible:true; text-color:#000000; format:%.1s" />
                <TextTimer name="text_timer" dimensions="center-x:50%; center-y:50%; width:64; height:64;" style="font:Demi_18; valign:middle; halign:center; clip:false; wrap:false; padding:0; visible:true; text-color:#FF8800; format:%.1s" />
            </Group>
        </BluePrint>
    </BluePrints>
    
    <Frames>
        <HUDFrame name="adt_frame" dimensions="center-x:50%-300; center-y:50%; height:64; width:268" style="halign:center; valign:center" visible="true" />
    </Frames>

</Component>

