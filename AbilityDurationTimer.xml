<?xml version="1.0" encoding="utf-8"?>
<Component
    xmlns="http://www.red5studios.com/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.red5studios.com/ ../../../../schemas/component.xsd"
>

    <Info
        title="Ability Duration Timer"
        author="Rumpel, Vollmond"
        description=""
        url=""
        uiVersion="1000"
    />

    <Textures>
        <Texture name="barslot_backplate_custom" src=".\res\background.png" premultiplied="false" />
    </Textures>
    
    <Events>    
        <Event name="ON_COMPONENT_LOAD"    bind="OnComponentLoad" />
        <Event name="ON_ABILITY_STATE"     bind="OnAbilityState" />
        <Event name="ON_ABILITY_USED"      bind="OnAbilityUsed" />
        <Event name="ON_ABILITY_IN_EFFECT" bind="OnAbilityInEffect" />
    </Events>
    
    <BluePrints>
        <BluePrint name="BP_IconTimer" instantiable="true">
            <StillArt name="circle" dimensions="left:0; top:0; height:64; width:64;" style="texture:barslot_backplate_custom; alpha:1;" />
            <Group name="timer_grp" dimensions="left:0; top:0; height:64; width:64;" />
        </BluePrint>

        <BluePrint name="BP_IconTimer_Content" instantiable="true">
            <Icon name="icon" dimensions="left:0; top:0; width:64; height:64;" />
            <TextTimer name="texttimer" dimensions="left:0; top:64; width:64; height:22;" style="font:Demi_18; valign:middle; halign:center; clip:false; wrap:false; padding:0; visible:true; alpha:0; text-color:#FF8800; format:%.1s" />
        </BluePrint>
    </BluePrints>
    
    <Frames>
        <HUDFrame name="adt_frame" dimensions="center-x:50%; center-y:50%; height:86; width:64" style="halign:center; valign:center" visible="true" />
    </Frames>

</Component>
